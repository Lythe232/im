<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackgroundBorderless"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/chat_item_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_circle_avatar"
            android:contentDescription="聊天对象头像"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/chat_item_name"
                android:text="Chat Name"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chat_item_last_message"
                android:text="Last message content"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/chat_item_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                />
            <com.lythe.media.chats.view.UnreadBadgeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_item_unread"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_unread_badge"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:minWidth="20dp"
                android:minHeight="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>